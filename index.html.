  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Abayo the Chat Dragon üêâ</title>
  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      background-color: #000; /* black */
      color: #add8e6; /* light blue */
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    h1 {
      font-size: 2rem;
      margin-bottom: 10px;
    }

    #chatbox {
      width: 90%;
      max-width: 600px;
      height: 60vh;
      border: 2px solid #add8e6;
      padding: 10px;
      overflow-y: auto;
      background: #111;
    }

    .message {
      margin: 10px 0;
    }

    .user {
      color: #add8e6;
    }

    .dragon {
      color: #000;
      background-color: #add8e6;
      padding: 5px;
      border-radius: 5px;
      display: inline-block;
    }

    #inputArea {
      margin-top: 20px;
      display: flex;
    }

    input {
      flex: 1;
      padding: 10px;
      font-size: 1rem;
      border: 2px solid #add8e6;
      background-color: #000;
      color: #add8e6;
    }

    button {
      padding: 10px 15px;
      font-size: 1rem;
      background-color: #add8e6;
      color: #000;
      border: none;
      cursor: pointer;
    }

    .fire-screen {
      position: fixed;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: black;
      z-index: 9999;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 4rem;
      color: red;
      animation: fadeOut 3s forwards;
    }

    @keyframes fadeOut {
      0% { opacity: 1; }
      100% { opacity: 0; visibility: hidden; }
    }
